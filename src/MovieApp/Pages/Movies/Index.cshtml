@page
@model MovieApp.Pages.Movies.IndexModel
@{
    ViewData["Title"] = "Lista de Filmes";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (Model.Movies.Any())
{
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="@movie.FullPosterPath" class="card-img-top" alt="@movie.Title">
                    <div class="card-body" style="cursor: pointer;">
                        <h5 title="@movie.Title" class="card-title">@movie.Title</h5>
                        <a asp-page="./Details" asp-route-id="@movie.Id" class="btn btn-primary">Ver Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">Nenhum filme encontrado.</p>
}